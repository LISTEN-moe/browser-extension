{

	"applications": {
		"gecko": {
			"id": "odysseyradio@listen.moe"
		}
	},

	"manifest_version": 2,

	"name": "LISTEN.moe",
	"description": "Anime/Japanese Radio powered by LISTEN.moe!",
	"version": "2017.8.29.1",
	"version_name": "RO-500",

	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},

	"icons": {
		"16": "images/logo16x16.png",
		"48": "images/logo48x48.png",
		"128": "images/logo128x128.png"
	},

	"permissions": [
		"*://listen.moe/*",
		"storage",
		"webRequest",
		"webRequestBlocking",
		"notifications"
	],

	"browser_action": {
		"browser_style": false,
		"default_popup": "popup.html",
		"default_icon": "images/icon48x48.png"
	},

	"background": {
		"scripts": ["js/jquery-3.1.0.min.js", "js/background.js"],
		"persistent": true
	},

	"commands": {
		"toggle_radio": {
			"suggested_key": {
				"default": "Ctrl+Shift+Space"
			},
			"description": "Toggle Radio"
		},
		"now_playing": {
			"description": "Display Now Playing"
		},
		"vol_up": {
			"description": "Raise Radio Volume"
		},
		"vol_down": {
			"description": "Lower Radio Volume"
		}
	},

	"content_scripts": [
		{
			"matches": ["https://listen.moe/*"],
			"js": ["js/sweetalert2.min.js", "js/listenmoe.js"],
			"run_at": "document_end",
			"all_frames": false
		}
	]
}
