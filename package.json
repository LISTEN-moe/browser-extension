{
	"name": "listen-moe-extension",
	"version": "1.0.0",
	"description": "Anime/Japanese Radio powered by LISTEN.moe!",
	"main": "index.js",
	"repository": "https://github.com/LISTEN-moe/chrome-extension.git",
	"author": "pilar6195 (https://github.com/pilar6195)",
	"license": "MIT",
	"engines": {
		"node": ">=8.0.0"
	},
	"devDependencies": {
		"eslint": "^4.19.1",
		"eslint-config-aqua": "^3.0.0"
	},
	"eslintConfig": {
		"extends": [
			"aqua"
		],
		"env": {
			"browser": true,
			"es6": true,
			"webextensions": true
		},
		"rules": {
			"func-names": 0,
			"curly": 0,
			"max-len": 0,
			"id-length": 0,
			"no-invalid-this": 0,
			"no-console": 0,
			"padded-blocks": 0,
			"no-unused-expressions": [
				"error", { "allowTernary": true }
			]
		}
	}
}
